<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef>
     <defName>MagicAndMyths_ProjectilePortal</defName>
     <label>arcane portal</label>
     <description>A magical portal that launches projectiles.</description>
     <thingClass>MagicAndMyths.ProjectileProxy</thingClass>
     <altitudeLayer>MoteOverhead</altitudeLayer>
     <graphicData>
       <texPath>Animations/portal_single</texPath>
       <graphicClass>Graphic_Single_SquashNStretch</graphicClass>
       <drawSize>2</drawSize>
       <color>(0.004, 0.843, 1)</color>
       <shaderType>MoteGlowDistorted</shaderType>
       <shaderParameters>
         <_DistortionTex>/Things/Mote/RadiationDistortion_A</_DistortionTex>
         <_distortionScale>0.1</_distortionScale>
         <_distortionIntensity>0.14</_distortionIntensity>
         <_brightnessMultiplier>1.1</_brightnessMultiplier>
         <_pulseSpeed>50</_pulseSpeed>
       </shaderParameters>
     </graphicData>
     <tickerType>Normal</tickerType>
     <selectable>false</selectable>
     <useHitPoints>false</useHitPoints>
     <castEdgeShadows>false</castEdgeShadows>
     <drawOffscreen>true</drawOffscreen>
   </ThingDef>
</Defs>
