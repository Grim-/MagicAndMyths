<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>MagicAndMyths_ReturnPortal</defName>
    <label>Portal : Home.</label>
    <description>this portal will return you to your home.</description>
    <thingClass>MagicAndMyths.Building_ReturnPortal</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Animations/portal_single</texPath>
      <graphicClass>Graphic_Single_SquashNStretch</graphicClass>
      <drawSize>2</drawSize>
      <color>(0.004, 0.843, 1)</color>
      <shaderType>MoteGlowDistorted</shaderType>
      <shaderParameters>
        <_DistortionTex>/Things/Mote/RadiationDistortion_A</_DistortionTex>
        <_distortionScale>0.1</_distortionScale>
        <_distortionIntensity>0.14</_distortionIntensity>
        <_brightnessMultiplier>1.1</_brightnessMultiplier>
        <_pulseSpeed>50</_pulseSpeed>
      </shaderParameters>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
    <fillPercent>0</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>1</Steel>
    </costList>
    <designationCategory>Misc</designationCategory>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <building>
      <deconstructible>false</deconstructible>
      <claimable>false</claimable>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>
</Defs>
