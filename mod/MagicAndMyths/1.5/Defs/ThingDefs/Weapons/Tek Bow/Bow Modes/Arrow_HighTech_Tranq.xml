<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <MagicAndMyths.BowModeDef>
    <defName>TranquilizerArrow</defName>
    <label>tranquilizer arrows</label>
    <description>Specialized arrows with sedative-filled tips that reduce consciousness on impact.</description>
    <projectileDef>Arrow_Tranquilizer</projectileDef>
    <verbClass>Verb_Shoot</verbClass>
    <warmupTime>1.3</warmupTime>
    <range>33</range>
    <requireLineOfSight>true</requireLineOfSight>
  </MagicAndMyths.BowModeDef>

  <!-- Tranquilizer Arrow Projectile Definition -->
  <ThingDef ParentName="BaseBullet">
    <defName>Arrow_Tranquilizer</defName>
    <label>tranquilizer arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(120, 190, 255)</color>
    </graphicData>
    <projectile>
      <damageDef>TranquilizerDamage</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <stoppingPower>1.0</stoppingPower>
      <speed>45</speed>
    </projectile>
  </ThingDef>

</Defs>
