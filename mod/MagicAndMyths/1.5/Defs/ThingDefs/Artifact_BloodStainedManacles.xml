<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ArtifactBase">
    <defName>Artifact_BloodStainedShackle</defName>
    <label>blood-stained shackle</label>
    <description>An aritfact wrought of vile magic, when placed on a victim, the victim suffers 100 years of torment, breaking their will, they will immediately convert to the colonys main ideology, if one exists, their will will also be broken completely.</description>
    <graphicData>
      <texPath>Shackle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>600</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
    </statBases>
    <drawGUIOverlay>false</drawGUIOverlay>
    <relicChance>3</relicChance>
    <comps Inherit="false">
      <li Class="CompProperties_Usable">
        <useJob>UseArtifact</useJob>
        <useLabel>Activate {0_label}</useLabel>
        <showUseGizmo>false</showUseGizmo>
        <useDuration>132</useDuration>
      </li>
      <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SinglePawn</compClass>
        <doCameraShake>false</doCameraShake>
        <fleckOnUsed>PsycastAreaEffect</fleckOnUsed>
        <fleckOnUsedScale>1</fleckOnUsedScale>
      </li>
      <li Class="MagicAndMyths.CompProperties_TargetEffectAddHediff">
        <hediff>MagicAndMyths_TorturedSoul</hediff>
      </li>
      <li Class="CompProperties_UseEffectPlayWarmupSound">
        <warmupSound>PsychicSoothePulserWarmupSustained</warmupSound>
      </li>
      <li Class="MagicAndMyths.CompProperties_UseEffectDestroyAfterCount">
        <maxUses>1</maxUses>
      </li>
    </comps>
  </ThingDef>

</Defs>
