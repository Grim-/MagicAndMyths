    <orderedTakeGroup>Artifact</orderedTakeGroup>
    <drawerType>MapMeshAndRealTime</drawerType>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Artifacts/Materia_red_high</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Standard_Drop</soundInteract>
    <useHitPoints>true</useHitPoints>
    <soundDrop>Standard_Drop</soundDrop>
    <smeltable>false</smeltable>
    <statBases>
      <MarketValue>10000</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>0.01</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <comps>
      <li Class="MagicAndMyths.CompProperties_PyreRuby">
        <absorptionRadius>30</absorptionRadius>
      </li>
      <li Class="MagicAndMyths.CompProperties_ThrowablePyreRubyDetonate">
      </li>
    </comps>
  </ThingDef>
</Defs>
