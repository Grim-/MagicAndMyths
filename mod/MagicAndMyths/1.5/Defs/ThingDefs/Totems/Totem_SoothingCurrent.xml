<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>MM_HealingTotem</defName>
    <label>healing totem</label>
    <description>A mystical totem that emanates healing energy, gradually restoring health to friendly pawns within its radius.</description>
    <thingClass>MagicAndMyths.Building_Totem</thingClass>
    <graphicData>
      <texPath>Totems/TotemRed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <shadowData>
        <volume>(0.3, 0.3, 0.3)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>false</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
    </statBases>
    <size>(1,1)</size>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <designationCategory>Misc</designationCategory>
    <comps>
      <li Class="MagicAndMyths.CompProperties_TotemApplyHediff">
        <hediff>MagicAndMyths_TrollsBloodRegenerationTemp</hediff>
        <severity>
          <min>1.0</min>
          <max>1.0</max>
        </severity>
        <tickInterval>1200</tickInterval>
        <canTargetHostile>false</canTargetHostile>
        <canTargetFriendly>true</canTargetFriendly>
        <canTargetNeutral>false</canTargetNeutral>
        <removeOnLeaveRadius>true</removeOnLeaveRadius>
      </li>
    </comps>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>
</Defs>
