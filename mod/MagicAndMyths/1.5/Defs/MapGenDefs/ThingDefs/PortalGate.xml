<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>Portal_GateLarge</defName>
    <label>Large Portal</label>
    <description>A Large stable portal gate capable of transporting pawns and things across massive distances.</description>
    <thingClass>MagicAndMyths.Building_PortalGate</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Plant/TreeAnima</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.12, 0.08, 0.1)</volume>
        <offset>(0,0,-0.25)</offset>
      </shadowData>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
    <fillPercent>0</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(2,2)</size>
    <costList>
      <Steel>1</Steel>
    </costList>
    <designationCategory>Misc</designationCategory>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_RadialPulse">
          <color>(150, 0, 237, 255)</color>
          <radius>3</radius>
      </li>
    </comps>
  </ThingDef>

</Defs>
