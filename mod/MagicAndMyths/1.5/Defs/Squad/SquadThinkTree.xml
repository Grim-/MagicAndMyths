<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThinkTreeDef>
    <defName>SquadThinkTree</defName>
    <insertTag>Humanlike_PreMain</insertTag>
    <thinkRoot Class="ThinkNode_Priority">
      <subNodes>

        <!-- 1 If they are part of a squad.... -->
        <li Class="MagicAndMyths.ThinkNode_ConditionalIsPartOfASquad">
          <subNodes>
            <!--1.1 if they have a point to defend, do that above all -->
            <li Class="MagicAndMyths.ThinkNode_ConditionalIsDefendingPoint">
              <subNodes>

                <!-- 1.1.1  move to defend point if not there -->
                <li Class="MagicAndMyths.ThinkNode_ConditionalIsAtDefendPoint">
                  <invert>true</invert>
                  <subNodes>
                    <li Class="MagicAndMyths.JobGiver_MoveToDefendPoint" />
                  </subNodes>
                </li>

                <!-- 1.1.2 if at defend position then defend it -->
                <li Class="MagicAndMyths.ThinkNode_ConditionalIsAtDefendPoint">
                  <subNodes>
                    <li Class="MagicAndMyths.JobGiver_SquadDefendPoint">
                      <targetAcquireRadius>65</targetAcquireRadius>
                      <targetKeepRadius>72</targetKeepRadius>
                    </li>
                  </subNodes>
                </li>
              </subNodes>
            </li>

            <!--2 Split between ToArms and Normal behavior -->
            <li Class="MagicAndMyths.ThinkNode_ConditionalIsCalledToArms">
              <!-- ToArms behaviors, fight, in formation, follow loosely -->
              <subNodes>
                <!--2.1 -->
                <li Class="MagicAndMyths.ThinkNode_ConditionalSquadHasTarget">
                  <subNodes>
                    <li Class="MagicAndMyths.JobGiver_SummonedCreatureFightEnemy" />
                  </subNodes>
                </li>

                <!--2.2.1 if we should follow in formation -->
                <li Class="MagicAndMyths.ThinkNode_ConditionalIsSquadInFormation">
                  <subNodes>
                    <!-- <li Class="MagicAndMyths.JobGiver_SummonedCreatureFormationFollow" /> -->

                    <!--2.2.1.1 if in formation position just stare -->
                    <li Class="MagicAndMyths.ThinkNode_ConditionalIsAtFormationPosition">
                      <subNodes>
                        <li Class="MagicAndMyths.JobGiver_StandAndStareShort" />
                      </subNodes>
                    </li>

                    <!--2.2.1.2 if NOT in formation position move there -->
                    <li Class="MagicAndMyths.ThinkNode_ConditionalIsAtFormationPosition">
                      <invert>true</invert>
                      <subNodes>
                        <li Class="MagicAndMyths.JobGiver_SquadMemberFollowInFormation" />
                      </subNodes>
                    </li>

                  </subNodes>
                </li>

                <!--2.2.2 if we should NOT follow in formation -->
                <li Class="MagicAndMyths.ThinkNode_ConditionalIsSquadInFormation">
                  <invert>true</invert>
                  <subNodes>
                    <!-- <li Class="MagicAndMyths.JobGiver_SummonedCreatureFollowMaster" /> -->

                    <li Class="MagicAndMyths.ThinkNode_ConditionalNearSquadLeader">
                      <invert>true</invert>
                      <subNodes>
                        <li Class="MagicAndMyths.JobGiver_SquadMemberFollowLoose" />
                      </subNodes>
                    </li>

                    <li Class="MagicAndMyths.ThinkNode_ConditionalNearSquadLeader">
                      <subNodes>
                        <li Class="MagicAndMyths.JobGiver_StandAndStareShort" />
                      </subNodes>
                    </li>
                  </subNodes>
                </li>

              </subNodes>
            </li>

            <!-- 3 do nothing if told to -->
            <li Class="MagicAndMyths.ThinkNode_ConditionalShouldDoNothing">
              <subNodes>
                <!-- 3.1 -->
                <li Class="MagicAndMyths.JobGiver_StandAndStareShort">
                </li>
              </subNodes>
            </li>
          </subNodes>
        </li>
      </subNodes>
    </thinkRoot>
  </ThinkTreeDef>

</Defs>
