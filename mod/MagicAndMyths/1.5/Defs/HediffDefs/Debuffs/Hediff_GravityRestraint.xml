<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="NegativePotionEffectBase">
    <defName>MagicAndMyths_GravityRestraint</defName>
    <label>Gravity Restraint</label>
    <description>Magically induced gravitational forces are pulling this pawn to the earth, slowing movement.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1250</disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>

</Defs>
