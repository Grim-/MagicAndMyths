<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="PotionEffectBase">
      <defName>MagicAndMyths_BrittleBones</defName>
      <label>Brittle Bones</label>
      <description>This pawns armour is slowly being eaten away.</description>
      <hediffClass>HediffWithComps</hediffClass>
      <stages>
        <li>
          <label>minor</label>
          <statOffsets>
            <ArmorRating_Sharp>-0.1</ArmorRating_Sharp>
            <ArmorRating_Blunt>-0.1</ArmorRating_Blunt>
          </statOffsets>
        </li>
        <li>
          <label>moderate</label>
          <minSeverity>0.2</minSeverity>
          <statOffsets>
            <ArmorRating_Sharp>-0.175</ArmorRating_Sharp>
            <ArmorRating_Blunt>-0.175</ArmorRating_Blunt>
          </statOffsets>
        </li>
        <li>
          <label>serious</label>
          <minSeverity>0.4</minSeverity>
          <statOffsets>
            <ArmorRating_Sharp>-0.25</ArmorRating_Sharp>
            <ArmorRating_Blunt>-0.25</ArmorRating_Blunt>
          </statOffsets>
        </li>
        <li>
          <label>severe</label>
          <painFactor>1.3</painFactor>
          <minSeverity>0.6</minSeverity>
          <statOffsets>
            <ArmorRating_Sharp>-0.35</ArmorRating_Sharp>
            <ArmorRating_Blunt>-0.35</ArmorRating_Blunt>
          </statOffsets>
        </li>
        <li>
          <label>extreme</label>
          <minSeverity>0.8</minSeverity>
          <painFactor>1.5</painFactor>
          <statOffsets>
            <ArmorRating_Sharp>-0.45</ArmorRating_Sharp>
            <ArmorRating_Blunt>-0.45</ArmorRating_Blunt>
          </statOffsets>
        </li>
      </stages>
      <comps>
        <li Class="HediffCompProperties_Disappears">
          <disappearsAfterTicks>3400</disappearsAfterTicks>
        </li>
      </comps>
    </HediffDef>
</Defs>
