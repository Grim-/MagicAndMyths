<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>MagicAndMyths_Petrification</defName>
    <label>petrification</label>
    <description>A magical curse that gradually turns the victim to stone. At maximum severity, the victim becomes a statue.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>0.1</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <stages>
      <li>
        <label>initial</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>major</label>
        <minSeverity>0.7</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.7</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.9</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.7</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="MagicAndMyths.HediffCompProperties_SeverityPerInterval">
        <intervalTicks>2400</intervalTicks>
        <severityChange>0.1~0.13</severityChange>
      </li>
      <li Class="MagicAndMyths.HediffCompProperties_Petrification" />
    </comps>
  </HediffDef>
</Defs>
