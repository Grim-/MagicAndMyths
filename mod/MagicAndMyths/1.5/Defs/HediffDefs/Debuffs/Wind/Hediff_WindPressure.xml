<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="DebuffBase">
    <defName>MagicAndMyths_WindPressure</defName>
    <label>wind pressure</label>
    <description>This pawn has been subjected to intense wind pressure, causing internal tissue damage and affecting movement.</description>
    <duplicationAllowed>true</duplicationAllowed>
    <tendable>true</tendable>
    <injuryProps>
      <painPerSeverity>0.15</painPerSeverity>
      <bleedRate>0</bleedRate>
    </injuryProps>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
        <label>minor</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>moderate</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
</Defs>
