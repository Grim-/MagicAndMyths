<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>MagicAndMyths_LesserInvisibility</defName>
    <label>lesser invisibility</label>
    <description>This pawn is invisible to almost all other creatures.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <duplicationAllowed>false</duplicationAllowed>
    <comps>
      <li Class="HediffCompProperties_Invisibility">
        <fadeDurationTicks>100</fadeDurationTicks>
        <visibleToPlayer>true</visibleToPlayer>
      </li>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>4800</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>

</Defs>
