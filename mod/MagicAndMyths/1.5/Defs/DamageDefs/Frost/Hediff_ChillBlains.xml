<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="DebuffBase">
    <defName>MagicAndMyths_ChillBlains</defName>
    <label>chill blaine</label>
    <description>This pawns joints are enflamed, its skin enflamed suffering the effects of chill blaine.</description>
    <hediffClass>Hediff_Injury</hediffClass>
    <injuryProps>
      <painPerSeverity>0.002</painPerSeverity>
      <bleedRate>0</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>rotted off</destroyedLabel>
      <destroyedOutLabel>frozen off</destroyedOutLabel>
    </injuryProps>
    <stages>
      <li>
        <label>minor</label>
        <statOffsets>
          <ArmorRating_Sharp>-0.1</ArmorRating_Sharp>
          <ArmorRating_Blunt>-0.1</ArmorRating_Blunt>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>6000</disappearsAfterTicks>
         <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
</Defs>
