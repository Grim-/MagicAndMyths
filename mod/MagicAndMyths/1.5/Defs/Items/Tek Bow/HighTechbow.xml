<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- High-Tech Bow Definition -->
  <ThingDef ParentName="BaseWeapon">
    <defName>HighTechBow</defName>
    <label>high-tech bow</label>
    <description>An advanced bow utilizing ancient technology combined with spacer-tech components. Features a specialized nanofiber string and adaptive limbs that can adjust to different arrow types on the fly.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/BowShort</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>2.3</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.92</AccuracyShort>
      <AccuracyMedium>0.87</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
      <WorkToMake>24000</WorkToMake>
      <MarketValue>1200</MarketValue>
    </statBases>
    <category>Item</category>
    <equipmentType>Primary</equipmentType>
    <weaponTags>
      <li>SpacerGun</li>
      <li>AdvancedRanged</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
    </weaponClasses>
    <tradeTags>
      <li>ExoticWeapon</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <costList>
      <Plasteel>40</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
      <Gold>15</Gold>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_HighTech</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>33</range>
        <soundCast>Shot_Bow</soundCast>
        <requireLineOfSight>true</requireLineOfSight>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>string</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="Thor.CompProperties_BowModeSwitcher">
        <defaultModeDef>StandardArrow</defaultModeDef>
        <allowedModeDefs>
          <li>StandardArrow</li>
          <li>FireArrow</li>
          <li>EMPArrow</li>
          <li>ExplosiveArrow</li>
          <li>TranquilizerArrow</li>
          <li>SmokePopMode</li>
          <li>BeamMmode</li>
        </allowedModeDefs>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="MoteBase">
    <defName>Mote_BowBeam</defName>
    <thingClass>MoteDualAttached</thingClass>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
      <fadeInTime>0.2</fadeInTime>
      <fadeOutTime>0.3</fadeOutTime>
      <solidTime>999999</solidTime>
      <needsMaintenance>True</needsMaintenance>
      <rotateTowardsTarget>True</rotateTowardsTarget>
      <scaleToConnectTargets>True</scaleToConnectTargets>
      <fadeOutUnmaintained>True</fadeOutUnmaintained>
    </mote>
    <drawOffscreen>true</drawOffscreen>
    <graphicData>
      <texPath>Things/Mote/GraserBeam</texPath>
      <graphicClass>Thor.Graphic_MoteWithAgeSecsCustom</graphicClass>
      <shaderType>MoteBeam</shaderType>
      <shaderParameters>
        <_ExtraTexA>/noise/Noise84</_ExtraTexA>
        <_ExtraTexB>/Things/Mote/BeamSecondaryNoise_B</_ExtraTexB>
        <_ScrollSpeedA>-34</_ScrollSpeedA>
        <_ScrollSpeedB>3</_ScrollSpeedB>
        <_Intensity>122</_Intensity>
      </shaderParameters>
    </graphicData>
  </ThingDef>
</Defs>
