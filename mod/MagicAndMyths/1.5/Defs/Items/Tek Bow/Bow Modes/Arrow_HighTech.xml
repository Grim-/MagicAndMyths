<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Ammo Type Definitions -->
  <Thor.BowModeDef>
    <defName>StandardArrow</defName>
    <label>standard arrows</label>
    <description>Standard high-tech arrows with balanced damage and range.</description>
    <projectileDef>Arrow_HighTech</projectileDef>
    <verbClass>Verb_Shoot</verbClass>
    <warmupTime>1.3</warmupTime>
    <range>33</range>
    <requireLineOfSight>true</requireLineOfSight>
  </Thor.BowModeDef>

  <!-- Standard Arrow -->
  <ThingDef ParentName="BaseBullet">
    <defName>Arrow_HighTech</defName>
    <label>high-tech arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <armorPenetrationBase>0.85</armorPenetrationBase>
      <stoppingPower>1.2</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>

</Defs>
