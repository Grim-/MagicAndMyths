<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <MagicAndMyths.EnchantDef>
    <defName>Enchant_DragonKind</defName>
    <label>Enchantment of Dragonkind</label>
    <description>A green crystalline orb pulsing with protective energy. Enhances defense against blunt damage.</description>
    <commonality>1.0</commonality>
    <effects>
      <li Class="MagicAndMyths.EnchantEffectDef_PawnStatOffset">
        <workerClass>MagicAndMyths.EnchantEffect_PawnStatOffset</workerClass>
        <statToAffect>ArmorRating_Sharp</statToAffect>
        <statOffset>0.1</statOffset>
      </li>
      <li Class="MagicAndMyths.EnchantEffectDef_PawnStatFactor">
        <workerClass>MagicAndMyths.EnchantEffect_PawnStatFactor</workerClass>
        <statToAffect>Flammability</statToAffect>
        <statFactor>0</statFactor>
      </li>
    </effects>
    <textColor>(0.8, 0, 0)</textColor>
  </MagicAndMyths.EnchantDef>


  <MagicAndMyths.EnchantDef>
    <defName>Enchant_Sunlight</defName>
    <label>Enchantment of Sunlight</label>
    <description>A green crystalline orb pulsing with protective energy. Enhances defense against blunt damage.</description>
    <commonality>1.0</commonality>
    <effects>
      <li Class="MagicAndMyths.EnchantEffectDef_PawnStatFactorDaylight">
        <workerClass>MagicAndMyths.EnchantEffect_PawnStatFactor</workerClass>
        <statToAffect>ArmorRating_Heat</statToAffect>
        <minFactor>0</minFactor>
        <maxFactor>10</maxFactor>
      </li>
    </effects>
    <textColor>(0.8, 0, 0)</textColor>
  </MagicAndMyths.EnchantDef>
</Defs>
